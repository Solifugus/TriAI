[Unit]
Description=TriAI Messaging Server
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=solifugus
Group=solifugus
WorkingDirectory=/home/solifugus/development/TriAI
Environment="PATH=/home/solifugus/development/TriAI/venv/bin"
ExecStart=/home/solifugus/development/TriAI/venv/bin/python main.py
Restart=always
RestartSec=3
StandardOutput=journal
StandardError=journal
SyslogIdentifier=triai-messaging

# Health check - ensure the service is responding
ExecReload=/bin/kill -HUP $MAINPID

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/solifugus/development/TriAI

[Install]
WantedBy=multi-user.target